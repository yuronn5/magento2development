<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
         <table name="elogic_brands_view">
            <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Grid Record Id"/>
            <column xsi:type="varchar" name="author" nullable="false" length="50" comment="Author"/>
             <column xsi:type="varchar" name="role" nullable="false" length="50" comment="Role"/>
             <constraint xsi:type="primary" referenceId="PRIMARY">
                <column name="entity_id"/>
            </constraint>
            <constraint xsi:type="unique" referenceId="UNIQUE">
                <column name="entity_id"/>
            </constraint>
         </table>
</schema>
